{
  "name": "basic-template",
  "version": "1.0.0",
  "description": "A project template using Pug, Sass, JS, Webpack, and Gulp.",
  "type": "module",
  "scripts": {
    "dev": "cross-env NODE_ENV=development gulp",
    "build": "cross-env NODE_ENV=production gulp build",
    "webp": "gulp webp",
    "lint:js": "eslint --config eslint.config.js src/js/",
    "lint:sass": "stylelint src/sass/",
    "lint": "npm run format && npm run lint:js && npm run lint:sass",
    "format": "prettier --write 'src/**/*.{js,scss,pug}'"
  },
  "browserslist": [
    "last 2 versions",
    "> 1%",
    "not dead"
  ],
  "keywords": [
    "web development",
    "pug",
    "sass",
    "es6",
    "svg-sprites",
    "webpack",
    "gulp"
  ],
  "author": "<nikalalin@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@prettier/plugin-pug": "^3.2.0",
    "babel-loader": "^9.2.1",
    "browser-sync": "^3.0.3",
    "cross-env": "^7.0.3",
    "del": "^8.0.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "gulp": "^5.0.0",
    "gulp-autoprefixer": "^9.0.0",
    "gulp-cache": "^1.1.3",
    "gulp-clean-css": "^4.3.0",
    "gulp-flatten": "^0.4.0",
    "gulp-htmlmin": "^5.0.1",
    "gulp-newer": "^1.4.0",
    "gulp-plumber": "^1.2.1",
    "gulp-pug": "^5.0.0",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^6.0.0",
    "gulp-svg-sprite": "^2.0.3",
    "gulp-webp": "^5.0.0",
    "prettier": "^3.4.2",
    "sass": "^1.83.1",
    "stylelint": "^16.12.0",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-config-standard-scss": "^14.0.0",
    "stylelint-prettier": "^5.0.2",
    "stylelint-scss": "^6.10.0",
    "webpack": "^5.97.1",
    "webpack-cli": "^6.0.1",
    "webpack-stream": "^7.0.0"
  },
  "dependencies": {
    "globals": "^15.14.0"
  }
}
